---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Event Map - what TO do">
    <div class="page-wrapper">
        <div class="container">
            <div class="page-header">
                <h1>Events Map</h1>
                <p>Discover what's happening around Toronto this weekend</p>
            </div>

            <div class="map-container">
                <div class="map-placeholder">
                    <div class="placeholder-content">
                        <h3>Interactive Map Coming Soon</h3>
                        <p>This is where events will be displayed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .page-wrapper {
            min-height: 100vh;
            background: #f8f9fa;
            padding: 2rem 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .page-header h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        .page-header p {
            color: #666;
            font-size: 1.1rem;
            margin: 0;
        }
        
        .map-container {
            position: relative;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            overflow: hidden;
            margin-bottom: 2rem;
            min-height: 400px;
        }

        .map-placeholder {
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-align: center;
        }

        .placeholder-content h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .placeholder-content p {
            opacity: 0.9;
            font-size: 1rem;
            margin: 0;
        }
        
        @media (max-width: 768px) {
            .page-wrapper {
                padding: 1rem 0;
            }

            .container {
                padding: 0 0.5rem;
            }

            .page-header h1 {
                font-size: 2rem;
            }

            .page-header p {
                font-size: 1rem;
            }

            .map-container {
                margin-bottom: 1rem;
            }

            .map-placeholder {
                height: 300px;
            }

            .placeholder-content h3 {
                font-size: 1.25rem;
            }

            .placeholder-content p {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 480px) {
            .page-header h1 {
                font-size: 1.75rem;
            }

            .map-placeholder {
                height: 250px;
            }
        }
    </style>
</BaseLayout>